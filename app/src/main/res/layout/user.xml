<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/tools">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/user_card"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="2dp"
        android:layout_margin="5dp">

        <com.balysv.materialripple.MaterialRippleLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:mrl_rippleInAdapter="true"
            app:mrl_rippleDuration="200"
            app:mrl_rippleFadeDuration="75"
            app:mrl_rippleColor="@color/colorPrimaryLight"
            app:mrl_rippleDimension="10dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/user_click"/>

        </com.balysv.materialripple.MaterialRippleLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="10dp">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/user_avatar"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:id="@+id/user_name"
                android:fontFamily="sans-serif-light"
                android:textSize="12pt"
                android:textColor="@color/primary_text"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:maxLines="2"/>

            <com.balysv.materialripple.MaterialRippleLayout
                android:layout_width="90dp"
                android:layout_height="90dp"
                app:mrl_rippleInAdapter="true"
                app:mrl_rippleDuration="200"
                app:mrl_rippleFadeDuration="75"
                app:mrl_rippleColor="@color/colorPrimaryLight"
                app:mrl_rippleDimension="10dp">

                <View
                    android:id="@+id/add_to_favorites"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@drawable/add_to_favorites"/>

            </com.balysv.materialripple.MaterialRippleLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>